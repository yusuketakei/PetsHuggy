<%= render'partial/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>登録</h2>
      <%= render 'partial/deviseErrorMsg' %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
        <hr/>
        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path,class: "btn btn-facebook" %>
        <hr/>
      
        <div class="form_group">
          <%= f.label :email %><br />
          <%= f.email_field :email,:class => 'form-control', autofocus: true,:placeholder => "email" %>
        </div>
      
        <div class="form_group">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password,:class => 'form-control', autocomplete: "off",:placeholder => "パスワード" %>
        </div>
      
        <div class="form_group">
          <%= f.label :"パスワードの確認" %><br />
          <%= f.password_field :password_confirmation,:class => 'form-control', autocomplete: "off",:placeholder => "パスワード" %>
        </div>
      
        <div class="form_group">
          <%= f.submit "Sign up",:class => 'btn btn-primary'%>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
      
    </div>
  </div>  
  
</div>

